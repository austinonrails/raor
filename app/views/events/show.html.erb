<div class="event">
  <h2><%= @event.name %></h2>                              X
  <p><%= @event.description %></p>
  Starts at: <%= @event.start_date %>
  Ends at: <%= @event.end_date %>
  <% if @event.is_checked_in?(current_user) %>
    Checked In
  <% else %>
    <%= button_to "Check In", event_checkins_path(@event) %>
  <% end %>

  <%= button_to "Edit", edit_event_path(@event), :method => :get if can? :update, @event %><br/>
  <%= button_to "Back", events_path, :method => :get %>

  <h3>Current checkins</h3>
  <div class="event_checkins">
    <ul id="checkins">
      <%= render :partial => "checkins/checkin", :collection => @event.checkins %>
    </ul>
  </div>
</div>